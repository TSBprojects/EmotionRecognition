                            <execution>
                                <configuration>
                                    <artifactSet>
                                        <excludes>
                                            <exclude>*:*:jar:android-*</exclude>
                                            <exclude>*:*:jar:linux-*</exclude>
                                            <exclude>*:*:jar:macosx-*</exclude>
                                            <exclude>*:*:jar:ios-*</exclude>
                                            <exclude>*:*:jar:windows-x86</exclude>
                                            <!--<exclude>*:*:windows-x86_64</exclude>-->
                                        </excludes>
                                    </artifactSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux-x86_64-cpu</id>
            <build>
                <finalName>${project.artifactId}-linux-x86_64-cpu</finalName>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <version>3.1.1</version>
                        <executions>
                            <execution>
                                <configuration>
                                    <artifactSet>
                                        <excludes>
                                            <exclude>*:*:jar:android-*</exclude>
                                            <!--<exclude>*:*:jar:linux-x86_64</exclude>-->
                                            <exclude>*:*:jar:linux-x86</exclude>
                                            <exclude>*:*:jar:macosx-*</exclude>
                                            <exclude>*:*:jar:ios-*</exclude>
                                            <exclude>*:*:jar:windows-*</exclude>
                                        </excludes>
                                    </artifactSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux-x86_64-cuda</id>
            <build>
                <finalName>${project.artifactId}-linux-x86_64-cuda</finalName>
                <plugins>
